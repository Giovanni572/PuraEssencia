@model ProjetoPuraEssencia.Models.Usuario;

<link rel="stylesheet" href="~/css/login.css"/>

	
	<div class="d-flex justify-content-center align-items-center mt-5">
		<form asp-action="Login" method="post" class=" w-50 h-100">
			<div class="d-flex align-items-center justify-content-center mb-4">
				<label class="me-3 fs-5 fw-bold color-label">E-mail:</label>
				<input class=" bg-bege w-50 form-control rounded-pill"
						   type="email"
						   placeholder="email@email.com"
						   name="email"
						   required />
			</div>
			<div class="d-flex align-items-center justify-content-center mb-4">
			<label class="me-3 fs-5 fw-bold color-label">Senha:</label>
				<input class="w-50 form-control rounded-pill bg-bege" type="password" placeholder="****" name="senha" required />
				</div>
			<div class="d-flex flex-column align-items-center">

			<button class="btn btn-success text-white w-25 mb-3">Entrar</button>
				
			<a class="link-dark text-decoration-none color-link custom-hover fw-bold" asp-controller="Usuario" asp-action="Cadastro">Cadastrar-se</a>
			</div>
			</form>
	</div>
